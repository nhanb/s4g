{{define "body"}}
<header>
  <h1 class="site-title">{{.Site.Name}}</h1>
  <p class="tagline">{{.Site.Tagline}}</p>
</header>

<hr>

{{if .Pages}}
  <div class="pages">
    <a href="{{$.Site.HomePath}}">Home</a>
    {{range .Pages}}
    <a href="{{.WebPath}}">{{.Meta.Title}}</a>
    {{end}}
  </div>

  <hr>
{{end}}

<p>All posts, newest first:</p>

<ul>
    {{range .Posts}}
    {{if not .Meta.IsDraft}}
    <li>
      {{.Meta.PostedAt.Local.Format "2006-01-02"}}
      â€” <a href="{{.WebPath}}">{{.Meta.Title}}</a>
    </li>
    {{end}}
    {{end}}
</ul>

<style>
.site-title {
  margin-bottom: 0;
}
.tagline {
  margin-top: 0;
}

.pages a {
  margin-right: 0.5rem;
}

ul {
  padding: 0;
  list-style-type: none;
  /*font-size: 1.1rem;*/
}
</style>
{{end}}
